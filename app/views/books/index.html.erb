  <div class="row">
    <div class="col-md-3">
      <%= render "users/info", user: current_user %>
      <div class="mt-3">
        <%= render "books/new", book: @new_book %>
      </div>
    </div>
  


  
    <div class="col-md-8 offset-md-1">

      <h2>Books</h2>
      <table class ="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image(80,80) %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id), class:"book_#{book.id}" %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
