<h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %><br>
  <table class="table">
    <thead></thead>
    <tbody>
      <tr>
        <th>Name</th>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th>Introduction</th>
        <td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>

