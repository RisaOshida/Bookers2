  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <% if @user.errors.any? %>
        <%= @user.errors.count %>error prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>


      <h2>User info</h2>
      <%= form_with model: @user, class: 'w-100' do |f| %>
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName", class: 'form-control' %><br>
        <label for="inputImage">Image</label><br>
        <%= f.file_field :profile_image, accept: "image/*" %> <br>
        <label for="inputIntroduction">Introduction</label> <br>
        <%= f.text_area :introduction, id:"inputIntroduction", class: 'form-control'  %> <br>


        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>

